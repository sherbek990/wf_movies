<div class="form-container">
  <div style="text-align: center; margin-bottom: 2rem;">
    <h1>ğŸ” Admin Panel</h1>
    <p style="color: var(--text-secondary); margin-top: 0.5rem;">Administrator Access Only</p>
  </div>

  <% if (typeof error !== 'undefined' && error) { %>
    <div class="error">
      <%= error %>
    </div>
  <% } %>

  <form method="post" action="/admin/login">
    <div class="form-group">
      <label for="username">Admin Username</label>
      <input 
        type="text" 
        id="username" 
        name="username" 
        required 
        placeholder="Enter admin username"
        autocomplete="username"
      />
    </div>

    <div class="form-group">
      <label for="password">Admin Password</label>
      <input 
        type="password" 
        id="password" 
        name="password" 
        required 
        placeholder="Enter admin password"
        autocomplete="current-password"
      />
    </div>

    <div class="form-actions">
      <button type="submit" class="btn primary" style="width: 100%;">
        ğŸ”‘ Login to Admin Panel
      </button>
    </div>
  </form>

  <div style="background: var(--card-bg); padding: 1rem; border-radius: 8px; margin-top: 2rem; border-left: 3px solid var(--secondary);">
    <p style="font-size: 0.85rem; color: var(--text-secondary); margin: 0;">
      <strong style="color: var(--secondary);">Default Admin:</strong><br>
      Username: <code style="background: var(--dark-bg); padding: 2px 6px; border-radius: 3px;">admin</code><br>
      Password: <code style="background: var(--dark-bg); padding: 2px 6px; border-radius: 3px;">admin123</code>
    </p>
  </div>

  <div style="text-align: center; margin-top: 2rem;">
    <a href="/" style="color: var(--text-secondary); text-decoration: none; font-size: 0.9rem;">
      â† Back to home
    </a>
  </div>
</div>
